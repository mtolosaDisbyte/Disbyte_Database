                    <% }else{ %>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/users/login">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/users/registrar">Registrarse</a>
                        </li>
