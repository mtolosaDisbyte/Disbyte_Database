                            <li>
                                <a class="nav-link active" aria-current="page" href="#"><%= user.email %></a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/crear">Crear Colaborador</a>
                        </li>
                      
                      <% } %>
                    <% } %>
                    <% if (locals.user) { %>
                      <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/users/logout">Cerrar sesión</a>
